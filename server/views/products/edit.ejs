<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <div>
    <a href="/products/<%=product._id%>"><i class="bi bi-arrow-left"></i> Back</a>
  </div>
  <div class="row">
    <h1 class="text-center">Edit Product</h1>
    <div class="col-md-6 offset-md-3">
      <form action="/products/<%=product._id%>?_method=PUT" method="POST" novalidate class="validated-form">
        <div class="my-3 d-flex justify-content-end">
          <% if(product.isActive) {%>
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" name="product[isActive]" role="switch" id="activeSwitch" value="false" />
            <label class="form-check-label" for="activeSwitch">Deactivate <%=product.name%></label>
          </div>
          <% } else {%>
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" name="product[isActive]" role="switch" id="activeSwitch" value="true" />
            <label class="form-check-label" for="activeSwitch">Activate</label>
          </div>
          <% } %>
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Product name</label>
          <input type="text" id="name" class="form-control" name="product[name]" value="<%=product.name%>" required />
          <div class="invalid-feedback">Enter the product name.</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea type="text" id="description" class="form-control" name="product[description]" required><%=product.description%></textarea>
          <div class="invalid-feedback">Add a product description</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input type="text" id="image" class="form-control" name="product[image]" value="<%=product.image%>" required />
          <div class="invalid-feedback">Please add an image.</div>
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <input type="text" id="category" class="form-control" name="product[category]" value="<%=product.category%>" required />
          <div class="invalid-feedback">Add a product category</div>
        </div>
        <div class="mb-3">
          <label for="sellingPrice" class="form-label">Selling Price</label>
          <div class="input-group">
            <span class="input-group-text">â‚¦</span>
            <input id="sellingPrice" type="text" class="form-control" placeholder="0.00" name="product[sellingPrice]" value="<%=product.sellingPrice%>" required />
            <div class="invalid-feedback">Add the product selling price</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="inventory" class="form-label">Inventory</label>
          <input type="text" id="inventory" class="form-control" value="<%=product.inventory%>" required disabled />
          <div class="invalid-feedback">Enter stock number</div>
        </div>
        <div class="mb-3">
          <label for="lowStock" class="form-label">Low stock</label>
          <input type="number" id="lowStock" class="form-control" name="product[lowStock]" value="<%=product.lowStock%>" placeholder="At what number is stock low?" min="0" required />
          <div class="invalid-feedback">Enter low stock indicator</div>
        </div>
        <!------------ For image upload ---------->
        <!-- <div class="mb-3">
               <label for="image" class="form-label">Add images</label>
               <input
                  type="file"
                  name="image"
                  class="form-control"
                  id="image"
                  multiple
               />
            </div> -->
        <!----------------- ^^^^^^^^^^ ------------------->

        <div class="mb-3">
          <button class="btn btn-success">Update Product</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/validateForms.js"></script>
